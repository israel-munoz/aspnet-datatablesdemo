@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/css/base")
</head>
<body>
    <table id="example" class="display table-condensed table-responsive table-striped">
        <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Position</th>
                <th>Office</th>
                <th>Start date</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Position</th>
                <th>Office</th>
                <th>Start date</th>
                <th>Salary</th>
            </tr>
        </tfoot>
    </table>
    @Scripts.Render("~/js/base")
    <script>
        var table = $('#example');

        table.find('tfoot th').each(function () {
            var cell = $(this),
                title = cell.text();
            cell.html('<input type="text" placeholder="Search ' + title + '"/>');
        });

        var grid = table.DataTable({
            method: 'post',
            processing: true,
            serverSide: true,
            ajax: {
                url: '@Url.Content("~/api/data")',
                type: 'post'
            }
        });

        grid.columns().every(function () {
            var col = this;
            $('input', this.footer()).on('keyup change', function () {
                if (col.search() !== this.value) {
                    col
                        .search(this.value)
                        .draw();
                }
            })
        });
    </script>
</body>
</html>
